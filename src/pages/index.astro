---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION, PFP_URL } from '../consts';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<script>
		import confetti from 'canvas-confetti';
		confetti({
			particleCount: 100,
			spread: 70,
			origin: { y: 0.6 },
		});
	</script>
	<body>
		<Header title={SITE_TITLE} />
		<main>
			<!-- round pfp with floating cards below for text -->
			<div class="flex flex-col items-center justify-center">
				<img
					src={PFP_URL}
					alt="Profile picture"
					class="rounded-full w-48 h-48"
				/>
				<div class="flex flex-col items-center justify-center mt-10">
					<h1 class="text-4xl font-bold">Hi, I'm <span class="text-blue-500">Canaris</span></h1>
					<h2 class="text-2xl font-semibold">I'm a <span class="text-blue-500">student</span> and <span class="text-blue-500">developer</span></h2>
				</div>
				<!-- andd some addition content -->
				<div class="flex flex-col items-center justify-center mt-10">
					<h2 class="text-2xl font-semibold">I'm currently working on <span class="text-blue-500">a Discord bot</span> and <span class="text-blue-500">a website</span></h2>
					<h2 class="text-2xl font-semibold">and currently learning <span class="text-blue-500">Rust</span> and <span class="text-blue-500">Go</span></h2>
				</div>
				<div class="flex flex-col items-center justify-center mt-10">
					<h2 class="text-2xl font-semibold">I'm also a <span class="text-blue-500">Linux</span> and <span class="text-blue-500">FOSS</span> enthusiast</h2>
					<h2 class="text-2xl font-semibold">and I use <span class="text-blue-500">Arch Linux</span> as my daily driver</h2>
				</div>
			</div>
			<p class="mt-10 text-center text-xs">i use arch btw</p>
		</main>
		<Footer />
	</body>
</html>
